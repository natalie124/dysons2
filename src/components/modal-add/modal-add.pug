section.modal.modal-add.js-modal-add.js-modal.js-hide
  .modal__wrapper.modal-add__wrapper
    button.modal__close.button-close.js-close-btn(type="button" title="Закрыть" tabindex="1")
    .modal__container.modal-add__container
      .modal__content.modal-add__content
        h2.modal-add__title
          +svg("cart", 30, 29)
          |Товар добавлен в корзину
        .modal-add__img
          +picture-png-webp("modal-add", 381, 382, "Стайлер Dyson HS01 Airwrap")
        .modal-add__info
          p.modal-add__article Артикул: <span>16665555</span>
          p.modal-add__name Стайлер Dyson HS01 Airwrap
          p.modal-add__price <span>31 990</span> ₽
          a.modal-add__btn(href="cart.html")
            +svg("wallet", 20, 19)
            | Оформить заказ
          button.modal-add__btn.js-close-btn.modal-add__btn--close(type="button")
            +svg("mouse", 18, 28 )
            | Продолжить покупки
