section.catalog
  .container
    h1.page-title.page-title--left  Уход за волосами
    .catalog__filters
      form
        .catalog__check
          input(type="checkbox", id="styling-tools" name="styling-tools" checked)
          label(for="styling-tools") Стайлеры
          input(type="checkbox", id="hairdryers" name="hairdryers")
          label(for="hairdryers") Фены
        .catalog__select
          select(name="sort" id="sort")
            option(value="popular") Популярные
            option(value="pnovelties") Новинки
            option(value="expensive") Самые дорогие
            option(value="cheap") Самые дешевые
          label.visually-hidden(for="sort") Сортировать
  .container.container--np
      h2.title.title--left С этим товаром покупают
