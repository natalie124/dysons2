            a.cards__img(href="#")
              +picture-png-webp("card-1", 270, 300, "Dyson Airwrap Complete")
            .cards__content
              .cards__info
                a.cards__category(href="#") Стайлер
                a.cards__title(href="#") Dyson Airwrap Complete
              .cards__price
